# App Settings
APP_NAME=Meter Installation Tracking System
APP_VERSION=1.0.0
APP_ENV=development  # development, staging, production
DEBUG=True
SECRET_KEY=your-secret-key-here
API_PREFIX=/api
ALLOW_ORIGINS=["http://localhost:8080", "http://localhost:3000"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]
TIMEZONE=Asia/Bangkok

# Database Settings
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=meterinstall_db

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# PWA API Settings
PWA_AUTH_API_URL=https://auth.pwa.com/api
PWA_AUTH_API_TIMEOUT=15
PWA_NOTIFY_API_URL=https://notify.pwa.co.th/api/sendNotify

# Oracle DB Sync Settings
ORACLE_HOST=oracle-db-host
ORACLE_PORT=1521
ORACLE_SERVICE=xe
ORACLE_USER=oracle_user
ORACLE_PASSWORD=oracle_password

# Line Notify Settings
LINE_NOTIFY_API_URL=https://notify-api.line.me/api/notify
LINE_NOTIFY_DEFAULT_TOKEN=your-line-notify-token

# Redis Settings (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Logging Settings
LOG_LEVEL=INFO
LOG_DIR=./logs 